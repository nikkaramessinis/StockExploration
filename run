#!/usr/bin/env python3
import argparse

import config
import strategies.technical_analysis as technical_analysis


def main():
    parser = argparse.ArgumentParser(description="Process stock symbol and strategy.")
    parser.add_argument(
        "-s",
        "--symbol",
        required=True,
        nargs="+",
        help="The stock symbols to process (space-separated list)",
    )
    parser.add_argument("-st", "--strategy", help="The strategy to use (optional)")
    parser.add_argument(
        "-sg",
        "--show_graphs",
        action="store_true",
        help="Hide graphs (optional, defaults to False)",
    )
    parser.add_argument(
        "-hg",
        "--show_feqos",
        action="store_true",
        help="Hide graphs (optional, defaults to False)",
    )

    args = parser.parse_args()

    symbols = args.symbol
    strategy = args.strategy
    show_graphs = args.show_graphs
    show_feqos = args.show_feqos

    if not strategy:
        strategy = config.DEFAULT_STRATEGY

    technical_analysis.analyze(symbols, strategy, show_graphs, show_feqos)


if __name__ == "__main__":
    main()
